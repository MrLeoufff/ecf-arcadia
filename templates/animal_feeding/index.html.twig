{% extends 'base.html.twig' %}

{% block title %}Liste des Nourrissages d'Animaux{% endblock %}

{% block body %}
    <h1>Liste des Nourrissages d'Animaux</h1>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Heure</th>
            <th>Nourriture</th>
            <th>Quantité</th>
            <th>Animal</th>
            <th>Utilisateur</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for feeding in animal_feedings %}
            <tr>
                <td>{{ feeding.id }}</td>
                <td>{{ feeding.feedingDate|date('Y-m-d H:i') }}</td>
                <td>{{ feeding.food }}</td>
                <td>{{ feeding.quantity }}</td>
                <td>{{ feeding.animalId.name }}</td>
                <td>{{ feeding.userId.email }}</td>
                <td>
                    <a href="{{ path('app_animal_feeding_show', {'id': feeding.id}) }}">Voir</a>
                    <a href="{{ path('app_animal_feeding_edit', {'id': feeding.id}) }}">Modifier</a>
                    <form method="post" action="{{ path('app_animal_feeding_delete', {'id': feeding.id}) }}" style="display:inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ feeding.id) }}">
                        <button type="submit">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_animal_feeding_new') }}">Créer un nouveau nourrissage</a>
{% endblock %}
