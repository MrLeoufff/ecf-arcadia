{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mb-4 m-4">
        <div class="col-md-8">
            <div class="card mb-3 rounded-4">
                <div class="row g-0">
                    {# Section présentation #}
                    <div class="col-md-6">
                        <div class="card-body">
                            <h5 class="card-title">Présentation</h5>
                            <p class="card-text">Arcadia est un zoo situé en France près de la forêt de Brocéliande, en Bretagne depuis 1990. Ils possèdent tout un panel d'animaux.</p>
                        </div>
                    </div>
                    {# Fin présentation #}
                    {# Section caroussel #}
                    <div class="col-md-6">
                        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner rounded-4">
                                <div class="carousel-item active">
                                    <img src="{{ asset('assets/images/dinos/diplodocus.jpg') }}" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{ asset('assets/images/dinos/sarcosuchus.jpg') }}" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="{{ asset('assets/images/dinos/spinosaurus.jpg') }}" class="d-block w-100" alt="...">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {# Section services #}
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <div class="col">
                    <div class="card">
                        <img src="{{ asset('assets/images/services/gigantes.jpg') }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Visite guidée</h5>
                        </div>
                    </div>
                    <div class="card">
                        <img src="{{ asset('assets/images/services/train.jpg') }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Visite guidée</h5>
                        </div>
                    </div>
                    <div class="card">
                        <img src="{{ asset('assets/images/services/visite.jpg') }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Visite guidée</h5>
                        </div>
                    </div>
                </div>
                {# Section habitat #}
                <div class="col">
                    <div class="card">
                        <img src="{{ asset('assets/images/habitat/jungle.jpg') }}" class="card-img-top" alt="...">
                    </div>
                    <div class="card">
                        <img src="{{ asset('assets/images/habitat/marais.jpg') }}" class="card-img-top" alt="...">
                    </div>
                    <div class="card">
                        <img src="{{ asset('assets/images/habitat/savane.jpg') }}" class="card-img-top" alt="...">
                    </div>
                </div>
                {# Section Dino #}
                <div class="col">
                    <div class="card">
                        <img src="{{ asset('assets/images/dinos/spinosaurus.jpg') }}" class="card-img-top" alt="...">
                    </div>
                    <div class="card">
                        <img src="{{ asset('assets/images/dinos/velociraptor.jpg') }}" class="card-img-top" alt="...">
                    </div>
                    <div class="card">
                        <img src="{{ asset('assets/images/dinos/diplodocus.jpg') }}" class="card-img-top" alt="...">
                    </div>
                </div>
            </div>
        </div>
        {# Section Avis #}
        <div class="col-md-4">
                {% for singleReview in reviews | reverse | slice(0, 3) %}
                    <div class="card">
                        <div class="card-header">
                            {{ singleReview.pseudo }}
                        </div>
                        <div class="card-body">
                            <p class="text-muted">{{ singleReview.submittedAt |date('d/m/Y') }}</p>
                            <p>{{ singleReview.comment }}</p>
                        </div>
                    </div>
                {% endfor %}
            <div class="card">
                    {{ form_start(form) }}
                <div class="card-header">
                    {{ form_label(form.pseudo) }}
                    {{ form_widget(form.pseudo) }}
                </div>
                <div class="card-body">
                    {{ form_label(form.comment) }}
                    {{ form_widget(form.comment) }}
                </div>
                <button type="submit" class="btn btn-primary">Soumettre</button>
                    {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
