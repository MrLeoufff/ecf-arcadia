{% extends 'base.html.twig' %}

{% block body %}
    <h1>Services</h1>

    <a href="{{ path('app_service_new') }}" class="btn btn-primary">Create new Service</a>

    <table class="table mt-3">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for services in service %}
            <tr>
                <td>{{ services.name }}</td>
                <td>{{ services.description }}</td>
                <td>
                    {% for image in services.image %}
                        <img src="{{ asset('uploads/images/' ~ image) }}" alt="{{ services.name }}" height="100">
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_service_edit', {'id': services.id}) }}" class="btn btn-warning">Ã‰diter</a>
                    <form method="post" action="{{ path('app_service_delete', {'id': services.id}) }}" onsubmit="return confirm('Are you sure you want to delete this service?');" style="display:inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ services.id) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
