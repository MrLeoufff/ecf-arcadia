{% extends 'base.html.twig' %}

{% block title %}Gestion des avis{% endblock %}

{% block body %}
    <h1>Gestion des avis</h1>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Pseudo</th>
            <th>Commentaire</th>
            <th>Soumis le</th>
            <th>Approuv√©</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.pseudo }}</td>
                <td>{{ review.comment }}</td>
                <td>{{ review.submittedAt|date('Y-m-d H:i') }}</td>
                <td>{{ review.valid ? 'Oui' : 'Non' }}</td>
                <td>
                    {% if not review.valid %}
                        <form method="post" action="{{ path('app_review_approve', {'id': review.id}) }}" style="display: inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ review.id) }}">
                            <button type="submit" class="btn btn-success">Approuver</button>
                        </form>
                    {% endif %}
                    <form method="post" action="{{ path('app_review_delete', {'id': review.id}) }}" style="display: inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
