{% extends 'base.html.twig' %}

{% block body %}
    <h1>Horaires</h1>

    <a href="{{ path('app_schedule_new') }}">Cr√©er de nouveaux horaires</a>

    <table>
        <thead>
        <tr>
            <th>Jours </th>
            <th>Heure d'ouverture</th>
            <th>Heure de fermeture</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for schedule in schedules %}
            <tr>
                <td>{{ schedule.day }}</td>
                <td>{{ schedule.openingTime|date('H:i') }}</td>
                <td>{{ schedule.closingTime|date('H:i') }}</td>
                <td>
                    <a href="{{ path('app_schedule_edit', {'id': schedule.id}) }}">Modifier</a>
                    <form method="post" action="{{ path('app_schedule_delete', {'id': schedule.id}) }}" onsubmit="return confirm('Are you sure you want to delete this schedule?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ schedule.id) }}">
                        <button class="btn">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
